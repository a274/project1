<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="wrap"
    app:layout_constraintWidth_default="spread"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <!--android:maxWidth= "25sp"-->

    <RelativeLayout
        android:id="@+id/main_widgets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="spread"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/head_search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/header_gradient"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:paddingTop="5dip">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="33dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo" />

            <SearchView
                android:id="@+id/search_view"
                style="@android:style/Widget.Material.Light.SearchView"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:contextClickable="true"
                android:iconifiedByDefault="false"
                android:queryBackground="@color/white"
                android:queryHint="Поиск"
                android:searchIcon="@android:drawable/ic_search_category_default">

            </SearchView>

            <ImageButton
                android:id="@+id/cartButton"
                android:layout_width="10dp"
                android:layout_height="61dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/cart" />


        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/slider"
            android:layout_width="wrap_content"
            android:layout_height="550dp"
            android:layout_below="@+id/head_search"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <!--app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:scaleType="centerInside">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/a001" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/a002" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/a003" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/lower_search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:elevation="5dp"
            android:background="@drawable/header_gradient"
            android:orientation="horizontal"
            android:paddingTop="5dip">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:padding="15dp"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/menu" />

            <ImageButton
                android:id="@+id/messageButton"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:padding="15dp"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/massage" />

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:padding="15dp"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/home" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>